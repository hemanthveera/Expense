        <calculation><![CDATA[(function calculatedFieldValue(current) {

	// Calculate remaining daily budget
	var nowDate=new GlideDateTime();
	var totalDaysInCurMonth=nowDate.getDaysInMonthLocalTime();
	var split1=nowDate.getDisplayValue().toString().split(" ");
	var split2=split1[0].split("-");
	var curDay=split2[2];
	var remainingDays=totalDaysInCurMonth-curDay;
	var dailyRemainingBudget=0;
	var allowedDailyBudget=((current.u_expense_monthly_limit-current.u_expense_spent)/remainingDays).toFixed(2);
	var v_ga = new GlideRecord('x_218245_expense_expense');
	//var v_expense_date= new GlideDate();
	//v_expense_date.setValue(split1[0]);
	var v_sum=0.00;
	//var vMonth=v_expense_date.getMonthNoTZ();
	//var vYear=v_expense_date.getYearNoTZ();
	v_ga.addEncodedQuery("u_expense_dateONToday@javascript:gs.beginningOfToday()@javascript:gs.endOfToday()");
	v_ga.query();
	while(v_ga.next()){
		v_sum=v_sum+parseFloat(v_ga.getValue('u_expense_cost'));
	}
	dailyRemainingBudget=allowedDailyBudget-v_sum;
	if(dailyRemainingBudget<0){
		dailyRemainingBudget=0;
	}
	
	
	return dailyRemainingBudget;  // return the calculated value

})(current);]]></calculation>
